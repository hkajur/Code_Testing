<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/ShortEditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/custom_edit_text"
        android:ems="10"
        android:hint="@string/QuestPlace"
        android:inputType="textMultiLine"
        android:paddingBottom="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="2dp" />

    <EditText
        android:id="@+id/SHeditText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/SHeditText3"
        android:layout_below="@+id/ShortEditText1"
        android:hint="@string/InputPlace" />

    <EditText
        android:id="@+id/SHeditText3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/SHeditText1"
        android:hint="@string/InputPlace" />

    <EditText
        android:id="@+id/SHeditText5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/SHeditText3"
        android:layout_weight="1"
        android:hint="@string/InputPlace" />

    <EditText
        android:id="@+id/SHeditText2"
        android:layout_width="122dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/SHeditText3"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/SHeditText1"
        android:layout_marginRight="26dp"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/OutputPlace" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/SHeditText4"
        android:layout_width="122dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/SHeditText3"
        android:layout_alignLeft="@+id/SHeditText2"
        android:layout_alignTop="@+id/SHeditText3"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/OutputPlace" />

    <Button
        android:id="@+id/button2"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button1"
        android:layout_below="@+id/button1"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttonshape"
        android:gravity="center"
        android:text="Clear"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/button1"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/SHeditText5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:background="@drawable/buttonshape"
        android:text="Submit"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/SHeditText6"
        android:layout_width="122dp"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/SHeditText5"
        android:layout_alignLeft="@+id/SHeditText4"
        android:layout_below="@+id/SHeditText4"
        android:layout_weight="1"
        android:ems="10"
        android:hint="@string/OutputPlace" />

</RelativeLayout>
